package com.ecommerce.orderservice.service.workflow;

import com.ecommerce.orderservice.model.Order;

import java.util.ArrayList;
import java.util.List;

public final class WorkflowContext {

    private final Order order;
    private final Long userId;
    private final Long storeId;

    // track completed steps for compensation
    private final List<String> completedSteps;

    private WorkflowContext(
            Order order,
            Long userId,
            Long storeId,
            List<String> completedSteps
    ) {
        this.order = order;
        this.userId = userId;
        this.storeId = storeId;
        this.completedSteps = completedSteps;
    }

    public static WorkflowContext start(Long userId, Long storeId) {
        return new WorkflowContext(null, userId, storeId, new ArrayList<>());
    }

    public WorkflowContext withOrder(Order order) {
        return new WorkflowContext(order, userId, storeId, completedSteps);
    }

    public WorkflowContext markCompleted(String step) {
        completedSteps.add(step);
        return this;
    }

    public Order order() {
        return order;
    }

    public Long userId() {
        return userId;
    }

    public Long storeId() {
        return storeId;
    }

    public List<String> completedSteps() {
        return List.copyOf(completedSteps);
    }
}

