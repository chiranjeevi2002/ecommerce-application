package com.ecommerce.common.webflux.service;

import com.ecommerce.common.webflux.pagination.PageResponse;

import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

public interface ReactiveGenericService<T, ID> {

    Mono<T> getById(ID id);

    Mono<PageResponse<T>> getAll(int page, int size);

    Mono<T> create(T dto);

    Mono<T> update(ID id, T dto);

    Mono<Void> delete(ID id);

    default Flux<T> streamAll() {
        return Flux.empty();
    }
}
