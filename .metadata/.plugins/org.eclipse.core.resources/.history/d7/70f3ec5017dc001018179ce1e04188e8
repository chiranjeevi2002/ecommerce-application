package com.ecommerce.productservice.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.ecommerce.productservice.model.Product;

public interface ProductRepository extends JpaRepository<Product, Long> {

	List<Product> findByStoreId(Long storeId);

	Optional<Product> findByIdAndStoreId(Long id, Long storeId);

	Page<Product> findByStoreId(Long storeId, Pageable pageable);

	@Query("""
			select p from Product p
			where p.storeId = :storeId
			  and (
			        lower(p.name) like lower(concat('%', :keyword, '%'))
			     or lower(p.category.name) like lower(concat('%', :keyword, '%'))
			  )
			""")
	Page<Product> searchByStoreAndNameOrCategory(Long storeId, String keyword, Pageable pageable);
	
	
    @Query("""
            select p.id from Product p
            where p.storeId = :storeId  and p.id in :productIds and p.active = true
        """)
        List<Long> findValidProductIds(@Param("storeId") Long storeId, @Param("productIds") List<Long> productIds
        );
}
