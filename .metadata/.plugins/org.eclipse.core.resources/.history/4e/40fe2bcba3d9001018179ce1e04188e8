package com.ecommerce.userservice.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ecommerce.common.security.SecurityHeaders;
import com.ecommerce.userservice.dto.UserResponse;
import com.ecommerce.userservice.service.UserService;

@RestController
@RequestMapping("/api/v1/users")
public class UserController {

    private final UserService userService;

    public UserController(UserService userService) {
        this.userService = userService;
    }

    @GetMapping("/me")
    public UserResponse me(
            @RequestHeader(SecurityHeaders.USER_ID) Long userId,
            @RequestHeader(SecurityHeaders.STORE_ID) Long storeId
    ) {
        return userService.getByUserIdAndStoreId(userId, storeId);
    }
}
