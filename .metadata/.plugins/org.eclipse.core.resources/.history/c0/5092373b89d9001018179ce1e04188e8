package com.ecommerce.userservice.util;

import java.security.Key;
import java.util.Base64;
import java.util.Collections;
import java.util.Date;
import java.util.List;
import java.util.Objects;
import java.util.Set;
import java.util.stream.Collectors;

import org.springframework.stereotype.Component;

import io.jsonwebtoken.Claims;
import io.jsonwebtoken.JwtBuilder;
import io.jsonwebtoken.JwtException;
import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.SignatureAlgorithm;
import io.jsonwebtoken.security.Keys;

@Component
public class JwtUtil {

    private final Key key;
    private final long expirationMillis;
    private final String issuer;

    public JwtUtil(JwtProperties props) {
        if (props.getSecretBase64() == null || props.getSecretBase64().isBlank()) {
            throw new IllegalStateException("JWT secret (jwt.secret-base64) not configured");
        }
        byte[] secretBytes = Base64.getDecoder().decode(props.getSecretBase64());
        this.key = Keys.hmacShaKeyFor(secretBytes); // HS256 key
        this.expirationMillis = props.getExpirationMillis();
        this.issuer = props.getIssuer();
    }

    /**
     * Generate JWT with subject=userId, username claim and roles claim (list).
     */
    public String generateToken(Long userId, Long storeId, String username, Set<String> roles) {
        long now = System.currentTimeMillis();
        Date iat = new Date(now);
        Date exp = new Date(now + expirationMillis);

        JwtBuilder builder = Jwts.builder()
                .setSubject(String.valueOf(userId))
                .setIssuer(issuer)
                .setIssuedAt(iat)
                .setExpiration(exp)
                .claim("username", username)
                .claim("storeId", storeId)
                .claim("roles", roles.stream().collect(Collectors.toList()))
                .signWith(key, SignatureAlgorithm.HS256);

        return builder.compact();
    }

    /**
     * Validate token signature and expiry. Returns true if valid.
     */
    public boolean validateToken(String token) {
        try {
            Jwts.parserBuilder().setSigningKey(key).build().parseClaimsJws(token);
            return true;
        } catch (JwtException | IllegalArgumentException ex) {
            return false;
        }
    }

    /**
     * Extract claims (throws on invalid token).
     */
    public Claims getClaims(String token) {
        return Jwts.parserBuilder().setSigningKey(key).build().parseClaimsJws(token).getBody();
    }

    public Long getUserId(String token) {
        Claims c = getClaims(token);
        String sub = c.getSubject();
        return sub == null ? null : Long.valueOf(sub);
    }

    public String getUsername(String token) {
        Claims c = getClaims(token);
        return c.get("username", String.class);
    }
    
    public Long getStoreId(String token) {
        Claims c = getClaims(token);
        return c.get("storeId", Long.class);
    }


    /**
     * Roles are stored as a List<String> in claim "roles" -> convert to Set<String>
     */
    public Set<String> getRoles(String token) {
        Claims c = getClaims(token);
        Object raw = c.get("roles");
        if (raw == null) return Collections.emptySet();

        // raw may be a List<?> of Strings
        if (raw instanceof List<?>) {
            List<?> list = (List<?>) raw;
            return list.stream()
                    .filter(Objects::nonNull)
                    .map(Object::toString)
                    .collect(Collectors.toSet());
        } else {
            // fallback: single role string
            return Collections.singleton(raw.toString());
        }
    }

    public long getExpirationMillis() {
        return expirationMillis;
    }
}
