package com.ecommerce.apigateway;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.slf4j.MDC;

@SpringBootApplication
public class ApiGatewayApplication {
    public static void main(String[] args) {
        MDC.put("service","ApiGateway");
        SpringApplication.run(ApiGatewayApplication.class, args);
    }
    
/**
 * 
 #	
 If you have Git for Windows installed (most developers do):
Open Git Bash
genereate jwt secret-base64 key generated by run in git bash = openssl rand -base64 32
 Start Zipkin UI
 docker run -d -p 9411:9411 openzipkin/zipkin
 then 
 http://localhost:9411
 
 http://localhost:8080/api/v1/docs


/v3/api-docs/orderservice → routed to lb://orderservice/v3/api-docs
/v3/api-docs/userservice → routed to lb://userservice/v3/api-docs

*/    
    

}
